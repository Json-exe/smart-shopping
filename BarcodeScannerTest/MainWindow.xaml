<Window x:Class="BarcodeScannerTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="5">
            <Button Background="Aqua" Width="150" Height="50" Click="UploadImage_OnClick">
                Pick a image file
            </Button>
            <TextBlock x:Name="BarcodeText" Margin="0 5 0 5" Background="Aqua" Text="No Data" FontWeight="Bold"
                       TextAlignment="Center" />
            <TextBlock x:Name="BarcodeTextType" Background="Aqua" Text="No Data" FontWeight="Bold"
                       TextAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>